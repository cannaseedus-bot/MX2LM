      "@domain": "Meta/Policy Planning & Governance",
      "@trinity": {
        "@kuhul": "Rule evaluation, constraint checking, policy execution",
        "@powershell": "Policy deployment, monitoring, enforcement",
        "@xjson": "Policy definitions, governance rules, compliance schemas"
      },
      "@triggers": ["should", "policy", "rule", "govern", "comply", "standard", "best practice", "guideline", "strategy"],
