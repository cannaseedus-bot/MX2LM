        "@kuhul": "Semantic parsing, ambiguity detection, intent scoring",
        "@powershell": "Context gathering, history analysis, user profiling",
        "@xjson": "Question schemas, clarification trees, intent maps"
      },
      "@triggers": ["@always_first_pass", "ambiguous_input", "missing_context", "multiple_interpretations"],
      "@weights": {
        "@ambiguity_detection": 0.97,
        "@intent_inference": 0.94,
        "@context_synthesis": 0.93,
        "@question_relevance": 0.95,
        "@semantic_understanding": 0.94
