{
  "@context": "asx://mx2lm/moe/omega/v1",
  "@version": "Ω.1.0.0",
  "@law": "MIXTURE_OF_TRINITY_EXPERTS",
  "@identity": {
    "@name": "MX2LM-MOE",
    "@description": "Mixture of Experts where each expert is a complete Trinity stack",
    "@architecture": "Router → Expert Selection → Trinity Execution → Synthesis"
  },
  "@router": {
    "@type": "semantic_gatekeeper",
    "@function": "Analyze input, determine intent, select experts, synthesize outputs",
    "@intent_categories": [
      "code_generation",
      "code_review",
      "reasoning_logic",
      "planning_strategy",
      "policy_governance",
      "clarification_needed",
      "meta_reflection",
      "multi_domain"
    ],
    "@routing_strategy": {
      "@single_expert": "When intent is clear and singular",
      "@multi_expert": "When task requires multiple domains",
      "@cascade": "When one expert's output feeds another",
      "@ensemble": "When consensus is needed"
    }
  },
  "@experts": {
    "CODE": {
      "@id": "expert.code",
      "@domain": "Agentic Semantic Coding",
      "@trinity": {
        "@kuhul": "Code generation, AST manipulation, compilation",
        "@powershell": "File I/O, execution, testing, deployment",
        "@xjson": "Code contracts, type schemas, API definitions"
      },
      "@triggers": ["write code", "implement", "build", "create function", "fix bug", "refactor", "optimize", "generate"],
      "@weights": {
        "@syntax_precision": 0.95,
        "@semantic_understanding": 0.90,
        "@pattern_recognition": 0.92,
        "@error_anticipation": 0.88
      },
      "@clarifying_questions": [
        "What language/framework are you targeting?",
        "Should this integrate with existing code?",
        "What are the performance requirements?",
        "Are there specific patterns you want me to follow?"
      ]
    },
    "REASON": {
      "@id": "expert.reason",
