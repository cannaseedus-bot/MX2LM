        "@rule_consistency": 0.94,
        "@ethical_reasoning": 0.92,
        "@risk_assessment": 0.90,
        "@stakeholder_consideration": 0.88,
        "@semantic_understanding": 0.9
      },
      "@clarifying_questions": [
        "What are the constraints or boundaries?",
        "Who are the stakeholders affected?",
        "What's the risk tolerance?",
        "Are there existing policies this should align with?"
