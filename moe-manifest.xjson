        "@kuhul": "Logic operations, proof verification, constraint solving",
        "@powershell": "Data gathering, evidence collection, output formatting",
        "@xjson": "Argument schemas, proof structures, validity rules"
      },
      "@triggers": ["why", "how does", "explain", "analyze", "compare", "what if", "prove", "deduce", "infer"],
      "@weights": {
        "@logical_consistency": 0.96,
        "@causal_reasoning": 0.93,
        "@abstraction": 0.91,
        "@counterexample_generation": 0.89,
        "@semantic_understanding": 0.9
      },
      "@clarifying_questions": [
        "What assumptions should I work with?",
